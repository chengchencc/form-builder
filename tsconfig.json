{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "form-core": [
        "dist/form-core/form-core",
        "dist/form-core"
      ],
      "util": [
        "dist/util/util",
        "dist/util"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}